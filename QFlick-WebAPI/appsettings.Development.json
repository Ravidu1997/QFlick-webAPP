{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      // ...
      "Override": {
        // Set to Critical to filter out the 'fail' (Error) log messages
        "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "critical",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          // This creates a 'logs' directory in your application's root directory:
          "path": "logs/logFile-{Date}.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      },
      {
        // 2. ENABLE THE CONSOLE SINK
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    //local db
    "DefaultString": "Data Source=(localdb)\\MSSQLLocalDB;Database=QFLICKv5.0;Integrated Security=True;;TrustServerCertificate=False;Trusted_Connection=True"
  },
